---
import ThemeToggle from '../components/ThemeToggle.astro';
const { title } = Astro.props;
---

<html lang="en" class="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link href="/styles/global.css" rel="stylesheet">
  </head>
  <body class="bg-white dark:bg-black text-gray-800 dark:text-white font-sans p-8">
    <header class="mb-12 flex justify-between items-center">
      <div class="flex items-center gap-4">
        <img src="/logo.svg" alt="Coderturtle Logo" class="w-10 h-10" />
        <h1 class="text-2xl font-bold">Coderturtle Blog</h1>
      </div>
      <ThemeToggle />
    </header>
    <main>
      <slot />
    </main>
    <footer class="mt-12 border-t pt-4 text-sm text-gray-500">
      <p>Built with 🧠 and ☕️ by the Coderturtle</p>
    </footer>
  </body>
</html>
